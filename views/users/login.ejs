<% layout('/layouts/boilerPlate')%>

<form action="/login" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email" name="email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control"  id="exampleInputPassword1" placeholder="Password" name="password">
    </div>
    
    <button type="submit" class="btn btn-primary" style="margin-top: 2px;">Login</button>
  </form>
  <a href="/register"><button class="btn btn-primary" style="margin-top: 10px;" >Signup</button></a>